<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".SellerDashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="636dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Yellow"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvProPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/sellerCenterLeft"
                android:fontFamily="sans-serif"
                android:text="@string/SellerCenter"
                android:textColor="@color/black"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBackTool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E7B81F"
                app:srcCompat="@drawable/notification_icon_svg_03cde" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#C0C0C0">

        <LinearLayout
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/picture_smiling_handsome_businessman_office_260nw_440932222" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvNameSeller"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:text="@string/sellername"
            android:textColor="@color/black"
            android:textSize="@dimen/denuwanODTextSize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:textAlignment="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/Yellow"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProDescription"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sellerDashLeft"
                android:text="@string/TotalSales"
                android:textColor="@color/black"
                android:textSize="@dimen/totSalesTextSize"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#C0C0C0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/TotalSalesCount"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/yellow"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/TotOrderLeft"
                android:text="@string/TotalOrders"
                android:textColor="@color/black"
                android:textSize="@dimen/TotOrdersTextSize"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="137dp"
                    android:layout_height="match_parent"
                    android:background="#D3D3D3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="126dp"
                        android:layout_height="75dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="137dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/pendingOrderLeft"
                            android:layout_marginTop="10dp"
                            android:text="@string/PendingOrderCount"
                            android:textSize="48sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="124dp"
                        android:layout_height="72dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@color/yellow"
                            android:text="@string/Pending"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/pendingTextSize" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="116dp"
                    android:layout_height="127dp"
                    android:background="#C0C0C0"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="113dp"
                        android:layout_height="75dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/pendingOrderLeft"
                            android:layout_marginTop="10dp"
                            android:text="@string/ApprovedOrderCount"
                            android:textSize="48sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="113dp"
                            android:layout_height="match_parent"
                            android:background="@color/yellow"
                            android:text="@string/Approved"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/approvedTextSize" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="128dp"
                    android:background="#D3D3D3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/returnedLeft"
                            android:layout_marginTop="10dp"
                            android:text="@string/returnCount"
                            android:textSize="48sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="114dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:background="@color/yellow"
                            android:text="@string/Returned"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ReturnedTextSize" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="#D2D2D2"
        android:orientation="vertical"
        tools:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/graphMargin"
            app:srcCompat="@drawable/_1499698" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#E6B71F"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView54"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/baseline_home_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnAddProduct"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/download_removebg_preview" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnViewProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/category_icon_256" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnSellerProfile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/baseline_account_circle_24" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>