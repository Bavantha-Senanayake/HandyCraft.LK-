<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/proImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/searc"
            app:srcCompat="@drawable/logo_handdcraft_lk"
            tools:srcCompat="@drawable/logo_handdcraft_lk" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSearch"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="28dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="50dp">

            <EditText
                android:id="@+id/etdSearch"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:autofillHints=""
                android:backgroundTint="#000000"
                android:ems="10"
                android:fontFamily="sans-serif-black"
                android:hint="@string/search"
                android:inputType="textPersonName"
                android:textColorHint="#000000"
                tools:ignore="TextContrastCheck,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="131dp"
                tools:layout_editor_absoluteY="8dp" />

            <ImageView
                android:id="@+id/icnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="250dp"
                android:contentDescription="@string/back"
                app:srcCompat="@drawable/icon_search"
                tools:ignore="ImageContrastCheck"
                tools:layout_editor_absoluteX="341dp"
                tools:layout_editor_absoluteY="8dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
         />


</LinearLayout>